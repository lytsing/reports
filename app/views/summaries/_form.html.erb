<%= simple_form_for(@summary, html: {class: 'form-horizontal well' }) do |f| %>
  
  <%- if f.error_notification %>
    <div class="alert alert-error fade in">
      <a class="close" data-dismiss="alert" href="#">&times;</a>
      <%= f.error_notification %>
    </div>
  <%- end %>

  <div class="form-inputs">
        <%= f.input :completed_at, as: :string, :id => "datepicker", input_html: { 'data-behaviour' => 'datepicker', value: Date.today }, label: '完成时间' %>
    <%= f.input :body, as: :text, input_html: { :rows => 5, :placeholder => "Enter some text.", :class => "span6" }, label: '计划内容' %>
    <%= f.input :next, as: :text, input_html: { :rows => 5, :placeholder => "Enter some text.", :class => "span6" }, label: '下一步解决方案' %>
    <%= f.input :rate, label: '完成率％' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, '提交', :class => "btn btn-primary" %>
  </div>
<% end %>

<script type="text/javascript">
  $('[data-behaviour~=datepicker]').datepicker({format: 'yyyy-mm-dd'});  
</script>