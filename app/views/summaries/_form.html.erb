<%= simple_form_for(@summary, html: {class: 'form-horizontal well' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :completed_at %>
    <%= f.input :body %>
    <%= f.input :next %>
    <%= f.input :rate %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-primary" %>
  </div>
<% end %>
