<h1>上周总结部分</h1>

<table class="table table-bordered table-hover table-striped">
  <thead class="header">
    <tr>
      <th>#</th>
      <th>计划内容</th>
      <th>完成时间</th>
      <th>实际完成情况</th>
      <th>完成率％</th>
      <th>下一步解决方案</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @summaries.each_with_index do |summary, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= summary.body %></td>
        <td><%= summary.completed_at %></td>
        <td></td>
        <td><%= summary.rate %></td>
        <td><%= summary.next %></td>
  
        <td><%= link_to 'Show', summary %> | <%= link_to 'Edit', edit_summary_path(summary) %> | <%= link_to 'Destroy', summary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @summaries %>

  <%= link_to 'New Summary', new_summary_path %>
