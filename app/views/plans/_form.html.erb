<%= simple_form_for(@plan, html: {class: 'form-horizontal well' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :plan_at, as: :string, :id => "datepicker", input_html: { 'data-behaviour' => 'datepicker', value: Date.today }, label: '计划时间' %>
    
    <%= f.input :body,  as: :text, input_html: { :rows => 5, :placeholder => "Enter some text.", :class => "span6" }, label: '计划内容'%>
    <%= f.input :actions, label: '执行人' %>
    <%= f.input :assist_resource, label: '协助部门/资源' %>

    <%= f.input :complete, input_html: { :rows => 3, :placeholder => "Enter some text.", :class => "span6" }, label: '完成标准' %>
  </div>
      <%= f.input :company_resource, input_html: { :rows => 3, :placeholder => "Enter some text.", :class => "span6" }, label: '公司资源需求' %>

  <div class="form-actions">
    <%= f.button :submit, '提交', :class => "btn btn-primary" %>    
  </div>
<% end %>


<script type="text/javascript">
  $('[data-behaviour~=datepicker]').datepicker({format: 'yyyy-mm-dd', language: 'zh-CN'});
</script>
